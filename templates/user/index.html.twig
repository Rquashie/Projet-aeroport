<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'head.html.twig' %}
</head>


<body>

    <h1>Profil de {{ app.user.prenom }} {{ app.user.nom }}</h1>

    <table class="table" id="table-user">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Ville</th>
                <th>DateNaissance</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ app.user.email }}</td>
                <td>{{ app.user.nom }}</td>
                <td>{{ app.user.prenom }}</td>
                <td>{{ app.user.ville }}</td>
                <td>{{ app.user.dateNaissance |date('Y-m-d') }}</td>
                <td>{{ app.user.password }}</td>
                <td>
                    {% if is_granted("ROLE_USER") %}
                 <a href="{{ path('app_compteUser_edit', {'id': app.user.id}) }}">Modifier votre profil</a>
                {% elseif is_granted("ROLE_PILOTE") %}
                       <a href="{{ path('app_comptePilote_edit', {'id': app.user.id}) }}">Modifier votre profil</a>
                {% else %}
                       <a href="{{ path('app_compteVol_edit', {'id': app.user.id}) }}">Modifier votre profil</a>
                {% endif %}


            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_index') }}">Retour</a>



</body>

</html>


