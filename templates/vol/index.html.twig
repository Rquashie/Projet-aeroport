<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'head.html.twig' %}
</head>
<body>
    <h1>Vol index</h1>

    <table class="table" id="vol">
        <thead>
            <tr>
                <th>VilleDepart</th>
                <th>VilleArrive</th>
                <th>DateDepart</th>
                <th>HeureDepart</th>
                <th>PrixBilletInitiale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
            <tr>
                <td>{{ vol.villeDepart }}</td>
                <td>{{ vol.villeArrive }}</td>
                <td>{{ vol.dateDepart ? vol.dateDepart|date('Y-m-d') : '' }}</td>
                <td>{{ vol.heureDepart ? vol.heureDepart|date('H:i:s') : '' }}</td>
                <td>{{ vol.prixBilletInitiale }}</td>
                <td>
                    <a href="{{ path('app_vol_show_passagers',{'id': vol.id}) }}">Liste des passagers</a><br>
                    <a href="{{ path('app_vol_show_pilotes',{'id': vol.id}) }}">Liste des pilotes</a><br>
                    <a href="{{ path('app_vol_edit', {'id': vol.id}) }}">Modifier le vol</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vol_new') }}">Create new</a>
    <a href="{{ path('app_index') }}">Retour</a>
</body>

</html>


